{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2022",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "paths": {
      "~/*": ["src/*"]
    },
    "jsx": "preserve"
  },
  "exclude": ["dist", "node_modules", "index.html"]
}

    "lint-fix": "eslint . --fix",
    "test": "ts-node --experimental-specifier-resolution=node --esm index.test.ts"
  },
  "dependencies": {
    "@shopify/shopify-api": "^7.7.0",
    "@types/aws-lambda": "^8.10.137",
    "dotenv": "^16.4.5"
